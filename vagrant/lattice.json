{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "source_ami": "ami-2dcf7b46",
            "instance_type": "m4.large",
            "ami_name": "lattice-vagrant-{{isotime \"20060102-1504\"}}",
            "ami_groups": ["all"],
            "ami_regions": [],
            "ssh_username": "ubuntu"
        },
        {
            "type": "vmware-iso",
            "headless": true,
            "vm_name": "lattice",
            "guest_os_type": "ubuntu-64",
            "disk_size": 15000,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
            "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
            "iso_checksum_type": "md5",
            "http_directory": "http",
            "tools_upload_flavor": "linux",
            "ssh_wait_timeout": "20m",
            "shutdown_command": "echo vagrant | sudo -S shutdown -P now",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname=lattice ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "vmx_data": {
                "memsize": "4096"
            }
        },
        {
            "type": "virtualbox-iso",
            "headless": true,
            "vm_name": "lattice",
            "guest_os_type": "Ubuntu_64",
            "disk_size": 15000,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
            "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
            "iso_checksum_type": "md5",
            "http_directory": "http",
            "ssh_wait_timeout": "20m",
            "shutdown_command": "echo vagrant | sudo -S shutdown -P now",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname=lattice ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--natdnshostresolver1", "on" ],
                [ "modifyvm", "{{.Name}}", "--nic1", "nat" ]
            ]
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "only": ["vmware-iso", "virtualbox-iso"],
            "execute_command": "echo vagrant | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "inline": [ "echo 'vagrant ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers" ]
        },
        {
            "type": "shell",
            "only": ["vmware-iso"],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get install -y dkms",
                "apt-get install -y --no-install-recommends open-vm-dkms"
            ]
        },
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get install -y dkms",
                "mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
                "sh /mnt/VBoxLinuxAdditions.run --nox11",
                "umount /mnt"
            ]
        },
        {
            "type": "file",
            "source": "manifest.yml",
            "destination": "/tmp/manifest.yml"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get -y install software-properties-common",
                "add-apt-repository ppa:brightbox/ruby-ng",
                "apt-get -y update",
                "apt-get -y --force-yes dist-upgrade",
                "apt-get -y update",
                "apt-get -y install curl unzip",
                "apt-get -y install libruby2.1 ruby2.1",
                "echo 'UseDNS no' >> /etc/ssh/sshd_config",
                "mkdir -p /var/lattice",
                "ip route get 1 | awk '{print $NF;exit}' > /var/lattice/ip",
                "sed \"s/placeholder-ip/$(cat /var/lattice/ip)/\" /tmp/manifest.yml > /var/lattice/manifest.yml"
            ]
        },
        {
            "type": "packer-bosh",
            "assets_dir": "assets",
            "remote_manifest_path": "/var/lattice/manifest.yml"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "remote_path": "/home/vagrant/bosh-cleanup.sh",
            "override": {
                "amazon-ebs": { "remote_path": "/home/ubuntu/bosh-cleanup.sh" }
            },
            "inline": [
                "chmod 1777 /tmp",
                "mv /opt/bosh-provisioner/assets/versions /var/lattice/",
                "rm -rf /opt/bosh-provisioner",
                "rm -f /var/vcap/data/garden/garden_graph_backing_store",
                "echo manual > /etc/init/runsvdir.override"
            ]
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get -y install jq lighttpd lighttpd-mod-webdav"
            ]
        },
        {
            "type": "shell",
            "only": ["vmware-iso", "virtualbox-iso"],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "mkdir -p /home/vagrant/.ssh",
                "wget --no-check-certificate -O authorized_keys 'https://github.com/mitchellh/vagrant/raw/master/keys/vagrant.pub'",
                "mv authorized_keys /home/vagrant/.ssh/",
                "chown -R vagrant /home/vagrant/.ssh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get -y autoremove",
                "apt-get -y clean"
            ]
        },
        {
            "type": "shell",
            "only": ["vmware-iso", "virtualbox-iso"],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "dd if=/dev/zero of=/EMPTY bs=1M 2>/dev/null || true",
                "rm -f /EMPTY"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "lattice-{{.Provider}}.box"
        }
    ]
}
